<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SplashScreenStyle"
    android:orientation="vertical"
    tools:context=".View.Activity.SplashScreenActivity">


    <ImageView
        android:id="@+id/spHat"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="103dp"
        android:src="@drawable/ic_school_hat"
        android:layout_gravity="center"

        />
    <TextView
        android:id="@+id/spText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Teachers Anywhere"
        android:textColor="@color/mainYellow"
        android:textSize="52sp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:layout_gravity="center"
        />





</LinearLayout>